<h1>Adopted Dogs</h1>

<% if (dogs.length === 0) { %>
  <p>No dogs adopted yet.</p>
<% } else { %>
<ul>
  <% dogs.forEach(dog => { %>
    <li style="margin-bottom: 20px;">
      <strong>Name:</strong> <%= dog.name %> <br>
      <strong>Description:</strong> <%= dog.description %>
      <button onClick="window.location.href='/dogs/<%= dog.id %>'">View Details</button>
    </li>
  <% }) %>
</ul>
<% } %>